{
  "compilerOptions": {
    "lib": ["ESNext"],
    "esModuleInterop": false,
    "declarationMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true
  },
  "exclude": ["node_modules"]
}
